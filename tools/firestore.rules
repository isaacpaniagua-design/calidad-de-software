rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isTeacher() {
      return isAuthenticated() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }

    // --- Reglas por Colección (Ordenadas por importancia) ---

    // Colección de Estudiantes
    match /students/{studentId} {
      allow read, write: if isTeacher();
      allow get: if isAuthenticated() && request.auth.uid == resource.data.authUid;
      allow list: if isAuthenticated() && request.query.where.authUid == request.auth.uid;
    }

    // Colección de Calificaciones (Grades)
    match /grades/{studentId} {
      allow read, write: if isTeacher();
      
      // Un estudiante puede leer (get) su propio documento de calificaciones
      // si el UID del usuario coincide con el campo 'authUid' del documento.
      allow get: if isAuthenticated() && resource.data.authUid == request.auth.uid;

      // REGLA ANIDADA CORRECTAMENTE para la subcolección 'activities'
      match /activities/{activityId} {
        allow write: if isTeacher();
        allow list: if isTeacher();

        // Un estudiante puede leer (get y list) sus propias actividades.
        // Se verifica que el documento 'grade' padre le pertenezca.
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/grades/$(studentId)).data.authUid == request.auth.uid;
      }
    }

    // Colección de Profesores
    match /teachers/{teacherId} {
      allow read: if isTeacher();
      allow write: if false; 
    }

    // Materiales de clase
    match /materials/{materialId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher();
    }

    // Entregas de los estudiantes
    match /studentUploads/{uploadId} {
      allow read, write: if isTeacher();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.student.uid;
      allow get, update: if isAuthenticated() && request.auth.uid == resource.data.student.uid;
    }

    // Foro: Temas y Respuestas
    match /forum_topics/{topicId} {
      allow read, write: if isAuthenticated();
      match /replies/{replyId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Asistencias
    match /attendances/{attendanceId} {
      allow read: if isAuthenticated();
      allow create: if (isAuthenticated() && request.auth.uid == request.resource.data.uid) || isTeacher();
    }
    
    // Planes de Prueba
    match /planesDePrueba/{planId} {
        allow read, write: if isTeacher();
    }
    
    // Colecciones 'courses' y 'grupos'
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher();
    }
    
    match /grupos/{grupoId} {
        allow read: if isAuthenticated();
        allow write: if isTeacher();
    }
  }
}
