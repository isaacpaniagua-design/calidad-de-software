rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Funciones de Ayuda ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isTeacher() {
      // Verdadero si el usuario está autenticado y su UID existe en la colección 'teachers'.
      return isAuthenticated() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }

    // --- Reglas por Colección ---

    match /teachers/{teacherId} {
      allow read: if isTeacher();
      allow write: if false; // Proteger contra escritura desde la app
    }

    match /students/{studentId} {
      // Un docente puede leer y escribir.
      allow read, write: if isTeacher();
      // Un estudiante puede leer (get) su propio perfil si su authUid coincide.
      // Asegúrate de que tus documentos de estudiantes tengan un campo 'authUid' con el UID de autenticación.
      allow get: if isAuthenticated() && request.auth.uid == resource.data.authUid;
      
       // NUEVO: Permitir que un estudiante haga una consulta a la lista,
  // pero solo si está buscando por su propio UID de autenticación.
  allow list: if isAuthenticated() && request.query.where.authUid == request.auth.uid;

    }
    
    // Calificaciones y Actividades
    match /grades/{studentId} {
      // El docente tiene control total (leer la lista y escribir).
      allow read, write: if isTeacher();
      
      // Un estudiante puede leer (get) su propio documento de calificaciones.
      // Esta regla es segura: busca en la colección 'students' el documento con la matrícula
      // del estudiante y compara el 'authUid' guardado con el UID del usuario que hace la petición.
      allow get: if isAuthenticated() && 
                 get(/databases/$(database)/documents/students/$(studentId)).data.authUid == request.auth.uid;

      // REGLA PARA LA SUBCOLECCIÓN DE ACTIVIDADES
      match /activities/{activityId} {
        // El docente puede escribir.
        allow write: if isTeacher();
        // Tanto el docente como el estudiante dueño del documento pueden leer.
        allow read: if isTeacher() || (isAuthenticated() && get(/databases/$(database)/documents/students/$(studentId)).data.authUid == request.auth.uid);
      }
    }

    match /materials/{materialId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher();
    }

    match /studentUploads/{uploadId} {
      allow read, write: if isTeacher();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.student.uid;
      allow get, update: if isAuthenticated() && request.auth.uid == resource.data.student.uid;
    }

    match /forum_topics/{topicId} {
      allow read, write: if isAuthenticated();
      
      match /replies/{replyId} {
        allow read, write: if isAuthenticated();
      }
    }

    match /attendances/{attendanceId} {
      allow read: if isAuthenticated();
      allow create: if (isAuthenticated() && request.auth.uid == request.resource.data.uid) || isTeacher();
    }
    
    match /planesDePrueba/{planId} {
        allow read, write: if isTeacher();
    }
    
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher();
    }
    
    match /grupos/{grupoId} {
        allow read: if isAuthenticated();
        allow write: if isTeacher();
    }
  }
}
